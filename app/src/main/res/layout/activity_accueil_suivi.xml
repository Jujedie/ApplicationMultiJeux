<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accueilSuivi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sombre"

    tools:context=".suivi.AccueilSuiviActivity">

    <TextView
        android:id="@+id/accueilSuivi1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:textColor="@color/clair"
        android:textStyle="bold"
        android:textSize="100px"
        android:text="@string/suivi" />

    <TextView
        android:id="@+id/accueilSuivi2"
        android:layout_below="@id/accueilSuivi1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textAlignment="center"
        android:textColor="@color/violet"
        android:textStyle="bold"
        android:textSize="40px"
        android:text="Forme :" />

    <Spinner
        android:id="@+id/accueilSuivi3"
        android:layout_below="@id/accueilSuivi2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/violet"
        android:popupBackground="@color/violet" />

    <TextView
        android:id="@+id/accueilSuivi4"
        android:layout_below="@id/accueilSuivi3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textAlignment="center"
        android:textColor="@color/violet"
        android:textStyle="bold"
        android:textSize="40px"
        android:text="DifficultÃ© :" />

    <Spinner
        android:id="@+id/accueilSuivi5"
        android:layout_below="@id/accueilSuivi4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/violet"
        android:popupBackground="@color/violet" />

    <Button
        android:id="@+id/accueilSuivi6"
        android:layout_below="@id/accueilSuivi5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/violet"
        android:textColor="@color/sombre"
        android:text="@string/lancer" />

</RelativeLayout>