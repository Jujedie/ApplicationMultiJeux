<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="225dp"
    android:layout_marginTop="230dp"
    android:background="#E6DDDD">

    <TextView
        android:id="@+id/Forme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forme  | "
        android:textColor="#D55454"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/Niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Forme"
        android:layout_marginTop="-1dp"
        android:text="Niveau | "
        android:textColor="#D55454"
        android:textSize="50dp" />

    <Spinner
        android:id="@+id/SpinnerForme"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_above="@+id/SpinnerNiveau"
        android:layout_alignRight="@id/Forme"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="-218dp"
        android:layout_marginBottom="2dp" />

    <Spinner
        android:id="@+id/SpinnerNiveau"
        android:layout_width="215dp"
        android:layout_height="70dp"
        android:layout_below="@id/Forme"
        android:layout_alignRight="@id/Niveau"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-217dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Niveau"
        android:text="Comfirmer"
        android:textSize="50dp"
        android:backgroundTint="#D55454"/>

</RelativeLayout>